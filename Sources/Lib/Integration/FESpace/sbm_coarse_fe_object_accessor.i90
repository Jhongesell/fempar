subroutine coarse_fe_object_accessor_create ( this, coarse_fe_space )
  implicit none
  class(coarse_fe_object_accessor_t)            , intent(inout) :: this
  class(coarse_fe_space_t), target              , intent(in)    :: coarse_fe_space
  call this%free()
  call this%object%create(coarse_fe_space%coarse_triangulation)
  this%coarse_fe_space => coarse_fe_space
end subroutine coarse_fe_object_accessor_create

subroutine coarse_fe_object_accessor_free ( this)
  implicit none
  class(coarse_fe_object_accessor_t), intent(inout) :: this
  call this%object%free()
  nullify ( this%coarse_fe_space )
end subroutine coarse_fe_object_accessor_free

function coarse_fe_object_accessor_get_number_coarse_fe_vefs_on_object(this)
  implicit none
  class(coarse_fe_object_accessor_t), intent(in) :: this
  integer(ip) :: coarse_fe_object_accessor_get_number_coarse_fe_vefs_on_object
  coarse_fe_object_accessor_get_number_coarse_fe_vefs_on_object = this%object%get_number_vefs_on_object()
end function coarse_fe_object_accessor_get_number_coarse_fe_vefs_on_object

function coarse_fe_object_accessor_get_coarse_fe_vefs_on_object_iterator(this)
  implicit none
  class(coarse_fe_object_accessor_t), intent(in) :: this
  type(coarse_fe_vefs_on_object_iterator_t) :: coarse_fe_object_accessor_get_coarse_fe_vefs_on_object_iterator
  call coarse_fe_object_accessor_get_coarse_fe_vefs_on_object_iterator%create(this%get_lid(), this%coarse_fe_space)
end function coarse_fe_object_accessor_get_coarse_fe_vefs_on_object_iterator

function coarse_fe_object_accessor_get_number_coarse_dofs(this, field_id)
  implicit none
  class(coarse_fe_object_accessor_t), intent(in) :: this
  integer(ip)                       , intent(in) :: field_id
  integer(ip) :: coarse_fe_object_accessor_get_number_coarse_dofs
  coarse_fe_object_accessor_get_number_coarse_dofs = this%coarse_fe_space%own_coarse_dofs_per_field(field_id)%get_sublist_size(this%get_lid())
end function coarse_fe_object_accessor_get_number_coarse_dofs

function coarse_fe_object_accessor_create_own_coarse_dofs_iterator(this, field_id) 
  implicit none
  class(coarse_fe_object_accessor_t), intent(in) :: this
  integer(ip)                , intent(in) :: field_id
  type(list_iterator_t) :: coarse_fe_object_accessor_create_own_coarse_dofs_iterator
  coarse_fe_object_accessor_create_own_coarse_dofs_iterator = this%coarse_fe_space%own_coarse_dofs_per_field(field_id)%create_iterator(this%get_lid())
end function coarse_fe_object_accessor_create_own_coarse_dofs_iterator
