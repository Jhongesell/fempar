subroutine fe_face_iterator_create ( this, fe_space ) 
  implicit none
  class(fe_face_iterator_t), intent(inout) :: this
  class(serial_fe_space_t) , intent(in)    :: fe_space
  type(face_accessor_t) :: face
  call this%free()
  this%face_iterator = fe_space%triangulation%create_face_iterator()
  call this%face_iterator%current(face)
  call this%current_fe_face_accessor%create(face%get_lid(), fe_space)
end subroutine fe_face_iterator_create

subroutine fe_face_iterator_free ( this ) 
  implicit none
  class(fe_face_iterator_t), intent(inout) :: this
  call this%face_iterator%free()
  call this%current_fe_face_accessor%free()
end subroutine fe_face_iterator_free

subroutine fe_face_iterator_init ( this ) 
  implicit none
  class(fe_face_iterator_t), intent(inout) :: this
  call this%face_iterator%init()
end subroutine fe_face_iterator_init

subroutine fe_face_iterator_next ( this ) 
  implicit none
  class(fe_face_iterator_t), intent(inout) :: this
  call this%face_iterator%next()
end subroutine fe_face_iterator_next

function fe_face_iterator_has_finished ( this ) 
  implicit none
  class(fe_face_iterator_t), intent(in) :: this
  logical                               :: fe_face_iterator_has_finished
  fe_face_iterator_has_finished = this%face_iterator%has_finished()
end function fe_face_iterator_has_finished

subroutine fe_face_iterator_current ( this, fe_face_accessor ) 
  implicit none
  class(fe_face_iterator_t), intent(inout) :: this
  type(fe_face_accessor_t) , intent(inout) :: fe_face_accessor
  type(face_accessor_t) :: face
  call this%face_iterator%current(face)
  call this%current_fe_face_accessor%set_lid(face%get_lid())
  fe_face_accessor = this%current_fe_face_accessor
end subroutine fe_face_iterator_current
