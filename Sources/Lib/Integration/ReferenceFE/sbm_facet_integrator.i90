!%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
! cell_map_facet_restriction_t type procedures
subroutine cell_map_facet_restriction_create( this, quadrature, reference_fe_geometry )
  implicit none
  ! Parameters
  class(cell_map_facet_restriction_t), intent(inout) :: this
  type(quadrature_t)           , intent(in)    :: quadrature
  class(lagrangian_reference_fe_t)           , intent(in)    :: reference_fe_geometry

  integer(ip)           :: face_lid, subfacet_lid, fe_map_index, istat

  call this%free()
  this%number_faces = reference_fe_geometry%get_number_facets()
  this%number_subfaces = reference_fe_geometry%get_h_refinement_number_subfaces()
  allocate(this%fe_map(this%number_faces*(this%number_subfacets+1)),stat = istat); check(istat == 0);
  do face_lid = 1,this%number_faces
    do subfacet_lid = 0,this%number_subfaces
      fe_map_index = face_lid + subfacet_lid*this%number_faces
      call this%fe_map(fe_map_index)%restricted_to_facet( face_lid,      &
                                                     subfacet_lid-1, &
                                                     quadrature,    &
                                                     reference_fe_geometry )
    end do
  end do
end subroutine cell_map_facet_restriction_create

!==================================================================================================
subroutine cell_map_facet_restriction_update( this, facet_lid, subfacet_lid, quadrature)
  implicit none
  ! Parameters
  class(cell_map_facet_restriction_t), intent(inout) :: this
  integer(ip)                     , intent(in)    :: facet_lid
  integer(ip)                     , intent(in)    :: subfacet_lid
  type(quadrature_t)           , intent(in)    :: quadrature

  this%active_facet_lid = facet_lid
  this%active_subfacet_lid = subfacet_lid
  call this%cell_map(facet_lid+subfacet_lid*this%number_faces)%update(quadrature)

end subroutine cell_map_facet_restriction_update

