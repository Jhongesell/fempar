  call this%lst_subparts_vefs_owner_to_ghost%resize(p_snd_ptrs_lst_subparts_owner_to_ghost(this%cell_import%get_num_neighbours()+1)-1)
  p_lst_subparts_vefs_owner_to_ghost => this%lst_subparts_vefs_owner_to_ghost%get_pointer()
  
