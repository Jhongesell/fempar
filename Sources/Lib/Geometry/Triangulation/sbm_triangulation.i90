subroutine t_compute_near_neigh_ctrl_data_owner_to_ghost_lst_subparts(this)
  implicit none
  class(triangulation_t), intent(inout)    :: this
  
  integer(ip), pointer :: snd_ptrs(:)
  integer(ip), pointer :: snd_leids(:)
  integer(ip), pointer :: rcv_ptrs(:)
  integer(ip), pointer :: rcv_leids(:)
  
  ! Second ghost to owner comm.
  integer(ip), pointer :: p_ptr_ghosts_per_local_cell(:)
  integer(ip), pointer :: p_lst_ghosts_per_local_cell(:)
  integer(ip), pointer :: p_snd_ptrs_lst_subparts_owner_to_ghost(:)
  integer(ip), pointer :: p_rcv_ptrs_lst_subparts_vefs_owner_to_ghost(:)
  integer(ip), pointer :: p_rcv_num_subparts_vefs_owner_to_ghost(:)
  integer(ip), pointer :: p_ptr_ghosts_per_ghost_cell(:)
  integer(ip), pointer :: p_lst_ghosts_per_ghost_cell(:)
  integer(ip), pointer :: p_rcv_num_subparts_vefs(:)
  
  integer(ip) :: i, j, k, l, m, n, icell, current
  integer(ip) :: cell_gid, ghost_cell_gid
  integer(ip) :: start_pos, end_pos, num_subparts, num_vefs
  class(cell_iterator_t), allocatable :: cell

  call this%create_cell_iterator(cell)
  if ( .not. cell%has_finished() ) then
    num_vefs = cell%get_num_vefs() 
  else
    num_vefs = 0
  end if
  call this%free_cell_iterator(cell)
  
  p_ptr_ghosts_per_local_cell => this%ptr_ghosts_per_local_cell%get_pointer()
  p_lst_ghosts_per_local_cell => this%lst_ghosts_per_local_cell%get_pointer()
  
  ! Init send data structures
  call this%snd_ptrs_lst_subparts_owner_to_ghost%resize(0)
  call this%snd_ptrs_lst_subparts_owner_to_ghost%resize(this%cell_import%get_num_neighbours()+1,0)
  p_snd_ptrs_lst_subparts_owner_to_ghost => this%snd_ptrs_lst_subparts_owner_to_ghost%get_pointer()
  call this%lst_subparts_pack_idx_owner_to_ghost%resize(0)
  
  
  p_rcv_num_subparts_vefs => this%rcv_num_subparts_vefs%get_pointer()
  snd_ptrs  => this%cell_import%get_snd_ptrs()
  snd_leids => this%cell_import%get_snd_leids()
  current = 1 
  ! Compute send data structures 
  do i=1, this%cell_import%get_num_neighbours()
     do j=snd_ptrs(i), snd_ptrs(i+1)-1
        k=snd_leids(j)
        do l=p_ptr_ghosts_per_local_cell(k), & 
             p_ptr_ghosts_per_local_cell(k+1)-1
             n = p_lst_ghosts_per_local_cell(l)
             start_pos = (n-1)*num_vefs+1
             end_pos   = (n  )*num_vefs
             num_subparts = 0
             do m=start_pos, end_pos
               num_subparts=num_subparts+p_rcv_num_subparts_vefs(m)
             end do
             
             do m=1, num_subparts
               call this%lst_subparts_pack_idx_owner_to_ghost%push_back(current)
               current = current + 1
             end do  
             
             p_snd_ptrs_lst_subparts_owner_to_ghost(i+1) = &
                p_snd_ptrs_lst_subparts_owner_to_ghost(i+1) + num_subparts
        end do
     end do 
  end do 
  
  p_snd_ptrs_lst_subparts_owner_to_ghost(1)=1
  do i=1, this%cell_import%get_num_neighbours()
    p_snd_ptrs_lst_subparts_owner_to_ghost(i+1) = p_snd_ptrs_lst_subparts_owner_to_ghost(i+1) + &
                                              p_snd_ptrs_lst_subparts_owner_to_ghost(i)
  end do 
  
    
  !! 2. "Recv side"
  rcv_ptrs  => this%cell_import%get_rcv_ptrs()
  rcv_leids => this%cell_import%get_rcv_leids()
  call this%rcv_ptrs_lst_subparts_owner_to_ghost%resize(this%cell_import%get_num_neighbours()+1)
  p_rcv_ptrs_lst_subparts_vefs_owner_to_ghost => this%rcv_ptrs_lst_subparts_owner_to_ghost%get_pointer()
  p_rcv_ptrs_lst_subparts_vefs_owner_to_ghost = 0
  p_rcv_num_subparts_vefs_owner_to_ghost => this%rcv_num_subparts_vefs_owner_to_ghost%get_pointer()
  p_ptr_ghosts_per_ghost_cell => this%ptr_ghosts_per_ghost_cell%get_pointer()
  p_lst_ghosts_per_ghost_cell => this%lst_ghosts_per_ghost_cell%get_pointer()
  do i=1, this%cell_import%get_num_neighbours()
   do j=rcv_ptrs(i), rcv_ptrs(i+1)-1
     k=rcv_leids(j)-this%get_num_local_cells()
     do l=p_ptr_ghosts_per_ghost_cell(k), & 
             p_ptr_ghosts_per_ghost_cell(k+1)-1
       n = p_lst_ghosts_per_ghost_cell(l)
       start_pos = (n-1)*num_vefs+1
       end_pos   = (n  )*num_vefs
       num_subparts=0
       do m=start_pos, end_pos 
         num_subparts=num_subparts+p_rcv_num_subparts_vefs_owner_to_ghost(m)
       end do
       p_rcv_ptrs_lst_subparts_vefs_owner_to_ghost(i+1) = & 
         p_rcv_ptrs_lst_subparts_vefs_owner_to_ghost(i+1) + num_subparts
     end do
   end do
  end do 
  ! Length to header
  p_rcv_ptrs_lst_subparts_vefs_owner_to_ghost(1)=1
  do i=1,this%cell_import%get_num_neighbours()
    p_rcv_ptrs_lst_subparts_vefs_owner_to_ghost(i+1) = & 
      p_rcv_ptrs_lst_subparts_vefs_owner_to_ghost(i+1)+p_rcv_ptrs_lst_subparts_vefs_owner_to_ghost(i) 
  end do
end subroutine t_compute_near_neigh_ctrl_data_owner_to_ghost_lst_subparts

