subroutine vef_iterator_create ( this, base_static_triangulation )
  implicit none
  class(vef_iterator_t)             , intent(inout)      :: this
  class(base_static_triangulation_t), target, intent(in) :: base_static_triangulation
  call this%free()
  this%base_static_triangulation => base_static_triangulation
  call this%first()
end subroutine vef_iterator_create

subroutine vef_iterator_free ( this)
  implicit none
  class(vef_iterator_t), intent(inout) :: this
  this%lid = -1
  nullify ( this%base_static_triangulation )
end subroutine vef_iterator_free

subroutine vef_iterator_free_final ( this)
  implicit none
  type(vef_iterator_t), intent(inout) :: this
  assert (this%lid == -1)
  assert (.not. associated(this%base_static_triangulation))
end subroutine vef_iterator_free_final

subroutine vef_iterator_first(this)
  implicit none
  class(vef_iterator_t), intent(inout) :: this
  this%lid = 1
end subroutine vef_iterator_first

subroutine vef_iterator_next(this)
  implicit none
  class(vef_iterator_t), intent(inout) :: this
  this%lid = this%lid + 1
end subroutine vef_iterator_next

subroutine vef_iterator_set_lid(this, lid)
  implicit none
  class(vef_iterator_t), intent(inout) :: this
  integer(ip)        , intent(in)    :: lid
  this%lid = lid
end subroutine vef_iterator_set_lid

function vef_iterator_has_finished(this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  logical :: vef_iterator_has_finished
  vef_iterator_has_finished = (this%lid > this%base_static_triangulation%num_vefs)
  !vef_iterator_has_finished = (this%lid > this%base_static_triangulation%num_local_vefs + &
  !     this%base_static_triangulation%num_ghost_vefs)
end function vef_iterator_has_finished

function vef_iterator_get_triangulation(this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  class(base_static_triangulation_t), pointer :: vef_iterator_get_triangulation
  vef_iterator_get_triangulation => this%base_static_triangulation
end function vef_iterator_get_triangulation

function vef_iterator_get_lid (this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  integer(ip) :: vef_iterator_get_lid
  vef_iterator_get_lid = this%lid
end function vef_iterator_get_lid

function vef_iterator_get_gid (this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  integer(igp) :: vef_iterator_get_gid
  assert (this%lid >= 1 .and. .not. this%has_finished())
  vef_iterator_get_gid = this%base_static_triangulation%vefs_gid(this%lid)
end function vef_iterator_get_gid

