subroutine vef_iterator_set_dimension(this,vef_dim)
  implicit none
  class(vef_iterator_t), intent(inout) :: this
  integer(ip)          , intent(in)    :: vef_dim
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  this%base_static_triangulation%vefs_type(this%lid) = (this%base_static_triangulation%vefs_type(this%lid)/10) * 10 + vef_dim
end subroutine vef_iterator_set_dimension

subroutine vef_iterator_set_it_at_boundary(this)
  implicit none
  class(vef_iterator_t), intent(inout) :: this
  integer(ip) :: vef_dim
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_dim = mod(this%base_static_triangulation%vefs_type(this%lid),10)
  this%base_static_triangulation%vefs_type(this%lid) = (this%base_static_triangulation%vefs_type(this%lid)/100) * 100 + 10 + vef_dim
end subroutine vef_iterator_set_it_at_boundary

subroutine vef_iterator_set_it_as_local(this)
  implicit none
  class(vef_iterator_t), intent(inout) :: this
  integer(ip) :: vef_dim_and_bound
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_dim_and_bound = mod(this%base_static_triangulation%vefs_type(this%lid),100)
  this%base_static_triangulation%vefs_type(this%lid) = vef_dim_and_bound
end subroutine vef_iterator_set_it_as_local

subroutine vef_iterator_set_it_at_interface(this)
  implicit none
  class(vef_iterator_t), intent(inout) :: this
  integer(ip) :: vef_dim_and_bound
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_dim_and_bound = mod(this%base_static_triangulation%vefs_type(this%lid),100)
  this%base_static_triangulation%vefs_type(this%lid) = 100 + vef_dim_and_bound
end subroutine vef_iterator_set_it_at_interface

subroutine vef_iterator_set_it_as_ghost(this)
  implicit none
  class(vef_iterator_t), intent(inout) :: this
  integer(ip) :: vef_dim_and_bound
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_dim_and_bound = mod(this%base_static_triangulation%vefs_type(this%lid),100)
  this%base_static_triangulation%vefs_type(this%lid) = 200 + vef_dim_and_bound
end subroutine vef_iterator_set_it_as_ghost

function vef_iterator_get_dimension(this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  integer(ip) :: vef_iterator_get_dimension
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_iterator_get_dimension  = mod(this%base_static_triangulation%vefs_type(this%lid),10)
end function vef_iterator_get_dimension

function vef_iterator_is_at_boundary (this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  logical :: vef_iterator_is_at_boundary 
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_iterator_is_at_boundary  = (mod(this%base_static_triangulation%vefs_type(this%lid)/10,10)==1)
end function vef_iterator_is_at_boundary

function vef_iterator_is_local (this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  logical :: vef_iterator_is_local 
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_iterator_is_local  = (this%base_static_triangulation%vefs_type(this%lid)/100==0)
end function vef_iterator_is_local

function vef_iterator_is_at_interface (this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  logical :: vef_iterator_is_at_interface 
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_iterator_is_at_interface  = (this%base_static_triangulation%vefs_type(this%lid)/100==1)
end function vef_iterator_is_at_interface

function vef_iterator_is_face (this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  logical :: vef_iterator_is_face
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_iterator_is_face  = (this%base_static_triangulation%get_num_dimensions()-1 == this%get_dimension())
end function vef_iterator_is_face

function vef_iterator_is_ghost (this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  logical :: vef_iterator_is_ghost 
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_iterator_is_ghost  = (this%base_static_triangulation%vefs_type(this%lid)/100==2)
end function vef_iterator_is_ghost

function vef_iterator_get_num_cells_around (this)
  implicit none
  class(vef_iterator_t), intent(in) :: this
  integer(ip) :: vef_iterator_get_num_cells_around
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  vef_iterator_get_num_cells_around = this%base_static_triangulation%ptrs_cells_around(this%lid+1)- &
       this%base_static_triangulation%ptrs_cells_around(this%lid)
end function vef_iterator_get_num_cells_around

subroutine vef_iterator_get_cell_around (this, icell_around, cell)
  implicit none
  class(vef_iterator_t) , intent(in)    :: this
  integer(ip)           , intent(in)    :: icell_around
  class(cell_iterator_t), intent(inout) :: cell
  integer(ip)                          :: position_in_lst_cells_around
  integer(ip)                          :: icell 
  assert ( this%lid >= 1 .and. .not. this%has_finished() )
  assert ( icell_around >= 1 .and. icell_around <= this%get_num_cells_around() )
  position_in_lst_cells_around = this%base_static_triangulation%ptrs_cells_around(this%lid) + icell_around-1
  icell = this%base_static_triangulation%lst_cells_around(position_in_lst_cells_around)
  call cell%set_lid(icell)
end subroutine vef_iterator_get_cell_around

