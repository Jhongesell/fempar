!===============================================================================
subroutine uhpafeci_create ( this, fe_space )
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t)            , intent(inout) :: this
  class(serial_fe_space_t), target, intent(in)    :: fe_space
  call this%unfitted_fe_cell_iterator_t%create(fe_space)
  call this%adaptive_fe%create(fe_space)
end subroutine uhpafeci_create

!===============================================================================
subroutine uhpafeci_free (this)
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t), intent(inout) :: this
  call this%unfitted_fe_cell_iterator_t%free()
  call this%adaptive_fe%free()
end subroutine uhpafeci_free

!===============================================================================
subroutine uhpafeci_next(this)
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t), intent(inout) :: this
  call this%unfitted_fe_cell_iterator_t%next()
  call this%adaptive_fe%next()
end subroutine uhpafeci_next

!===============================================================================
subroutine uhpafeci_first(this)
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t), intent(inout) :: this
  call this%unfitted_fe_cell_iterator_t%first()
  call this%adaptive_fe%first()
end subroutine uhpafeci_first

!===============================================================================
subroutine uhpafeci_set_gid(this, lid)
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t), intent(inout) :: this
  integer(ip)        , intent(in)    :: lid
  call this%unfitted_fe_cell_iterator_t%set_gid(lid)
  call this%adaptive_fe%set_gid(lid)
end subroutine uhpafeci_set_gid

!===============================================================================
function uhpafeci_is_strong_dirichlet_dof ( this, dof_lid )
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t), intent(in) :: this
  integer(ip)                          , intent(in) :: dof_lid
  logical :: uhpafeci_is_strong_dirichlet_dof
  uhpafeci_is_strong_dirichlet_dof = this%adaptive_fe%is_strong_dirichlet_dof(dof_lid)
end function uhpafeci_is_strong_dirichlet_dof

!===============================================================================
function uhpafeci_is_hanging_dof ( this, dof_lid )
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t), intent(in) :: this
  integer(ip)                          , intent(in) :: dof_lid
  logical :: uhpafeci_is_hanging_dof
  uhpafeci_is_hanging_dof = this%adaptive_fe%is_hanging_dof(dof_lid)
end function uhpafeci_is_hanging_dof

