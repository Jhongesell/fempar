!===============================================================================
subroutine uhpafeci_assembly_array ( this,  elvec, assembler )
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t)           , intent(inout) :: this
  real(rp)                       , intent(in)    :: elvec(:)
  class(assembler_t), intent(inout) :: assembler
  call this%adaptive_fe%assembly(elvec,assembler)
end subroutine uhpafeci_assembly_array

!===============================================================================
subroutine uhpafeci_assembly_matrix ( this,  elmat, assembler )
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t)           , intent(inout) :: this
  real(rp)                       , intent(in)    :: elmat(:,:)
  class(assembler_t), intent(inout) :: assembler
  call this%adaptive_fe%assembly(elmat,assembler)
end subroutine uhpafeci_assembly_matrix

!===============================================================================
subroutine uhpafeci_assembly_matrix_array ( this,  elmat, elvec, assembler )
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t)           , intent(inout) :: this
  real(rp)                       , intent(in)    :: elmat(:,:)
  real(rp)                       , intent(in)    :: elvec(:)
  class(assembler_t), intent(inout) :: assembler
  call this%adaptive_fe%assembly(elmat,elvec,assembler)
end subroutine uhpafeci_assembly_matrix_array

!===============================================================================
subroutine uhpafeci_assembly_matrix_array_with_strong_bcs(this,fe_function,elmat,elvec,assembler)
  implicit none
  class(unfitted_hp_adaptive_fe_cell_iterator_t), intent(inout)    :: this
  type(fe_function_t), intent(in) :: fe_function
  real(rp), intent(in) :: elmat(:,:)
  real(rp), intent(inout) :: elvec(:)
  class(assembler_t) , intent(inout) :: assembler
  call this%adaptive_fe%assembly(fe_function,elmat,elvec,assembler)
end subroutine uhpafeci_assembly_matrix_array_with_strong_bcs
