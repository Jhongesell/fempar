subroutine coarse_dof_object_iterator_create ( this, field_id, lid, mlbddc_coarse ) 
  implicit none
  class(coarse_dof_object_iterator_t)      , intent(inout) :: this
  integer(ip)                              , intent(in)    :: field_id
  integer(ip)                              , intent(in)    :: lid
  type(mlbddc_coarse_t)                    , intent(in)    :: mlbddc_coarse
  call this%free()
  call this%current_coarse_dof_object_accessor%create(field_id, lid, mlbddc_coarse)
end subroutine coarse_dof_object_iterator_create

subroutine coarse_dof_object_iterator_free ( this ) 
  implicit none
  class(coarse_dof_object_iterator_t), intent(inout) :: this
  call this%current_coarse_dof_object_accessor%free()
end subroutine coarse_dof_object_iterator_free

subroutine coarse_dof_object_iterator_init ( this ) 
  implicit none
  class(coarse_dof_object_iterator_t), intent(inout) :: this
  call this%current_coarse_dof_object_accessor%set_lid(lid=1)
end subroutine coarse_dof_object_iterator_init

subroutine coarse_dof_object_iterator_next ( this ) 
  implicit none
  class(coarse_dof_object_iterator_t), intent(inout) :: this
  call this%current_coarse_dof_object_accessor%next()
end subroutine coarse_dof_object_iterator_next

function coarse_dof_object_iterator_has_finished ( this ) 
  implicit none
  class(coarse_dof_object_iterator_t), intent(in) :: this
  logical                                 :: coarse_dof_object_iterator_has_finished
  coarse_dof_object_iterator_has_finished = this%current_coarse_dof_object_accessor%past_the_end()
end function coarse_dof_object_iterator_has_finished

function coarse_dof_object_iterator_current ( this ) 
  implicit none
  class(coarse_dof_object_iterator_t), target, intent(in) :: this
  type(coarse_dof_object_accessor_t) :: coarse_dof_object_iterator_current
  coarse_dof_object_iterator_current = this%current_coarse_dof_object_accessor
end function coarse_dof_object_iterator_current
