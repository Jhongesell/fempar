subroutine fe_accessor_update_cell_fe_function_scalar ( this, fe_function, cell_fe_function_scalar )
  implicit none
  class(fe_accessor_t)           , intent(in)    :: this
  type(fe_function_t)            , intent(in)    :: fe_function
  type(cell_fe_function_scalar_t), intent(inout) :: cell_fe_function_scalar

  
  integer(ip)                        :: inode, field_id, block_id
  integer(ip)                        :: number_nodes_field, number_quadrature_points
  integer(ip)              , pointer :: elem2dof(:)
  integer(ip)              , pointer :: field_blocks(:)
  class(reference_fe_t)    , pointer :: reference_fe
  type(quadrature_t)       , pointer :: quadrature
  type(volume_integrator_t), pointer :: volume_integrator
  real(rp)                 , pointer :: strong_dirichlet_values_entries(:)
  real(rp)                 , pointer :: nodal_values(:)
  real(rp)                 , pointer :: quadrature_points_values(:)
  type(vector_field_t)     , pointer :: quadrature_points_gradients(:)
  
  field_id                 =  cell_fe_function_scalar%get_field_id()
  field_blocks             => this%get_field_blocks()
  reference_fe             => this%get_reference_fe(field_id)
  quadrature               => this%get_quadrature()
  volume_integrator        => this%get_volume_integrator(field_id)
  number_nodes_field       =  reference_fe%get_number_shape_functions()
  number_quadrature_points =  quadrature%get_number_quadrature_points()
  
  call cell_fe_function_scalar%set_current_number_quadrature_points( number_quadrature_points )
  call cell_fe_function_scalar%set_current_number_nodes( number_nodes_field )

  block_id = field_blocks(field_id)
  nodal_values                => cell_fe_function_scalar%get_nodal_values()
  quadrature_points_values    => cell_fe_function_scalar%get_quadrature_points_values()
  quadrature_points_gradients => cell_fe_function_scalar%get_quadrature_points_gradients()
  
  call this%get_field_elem2dof(field_id,elem2dof)
  
  ! Extract nodal values associated to dirichlet bcs
  strong_dirichlet_values_entries => fe_function%strong_dirichlet_values%get_entries()
  do inode = 1, number_nodes_field
     if ( elem2dof(inode) < 0 ) then
        nodal_values(inode) = strong_dirichlet_values_entries(-elem2dof(inode))
     end if
  end do
  
  ! Extract nodal values associated to dofs
  call fe_function%dof_values%extract_subvector ( block_id, &
                                                  number_nodes_field, &
                                                  elem2dof, &
                                                  nodal_values )
  
  ! Evaluate values and gradients at quadrature points
  call volume_integrator%evaluate_fe_function ( nodal_values, & 
                                                quadrature_points_values )
  
  call volume_integrator%evaluate_gradient_fe_function ( nodal_values, & 
                                                         quadrature_points_gradients )
  
end subroutine fe_accessor_update_cell_fe_function_scalar

