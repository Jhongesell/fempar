subroutine fe_vef_accessor_vef_accessor_create(this, lid, base_static_triangulation )
  implicit none
  class(fe_vef_accessor_t)                  , intent(inout) :: this
  integer(ip)                               , intent(in)    :: lid
  class(base_static_triangulation_t), target, intent(in)    :: base_static_triangulation
  check(.false.)
end subroutine fe_vef_accessor_vef_accessor_create

subroutine fe_vef_accessor_create ( this, lid, fe_space )
  implicit none
  class(fe_vef_accessor_t)             , intent(inout) :: this
  integer(ip)                          , intent(in)    :: lid
  class(new_serial_fe_space_t) , target, intent(in)    :: fe_space
  call this%vef_accessor_t%create(lid,fe_space%get_triangulation())
  this%fe_space => fe_space
end subroutine fe_vef_accessor_create

subroutine fe_vef_accessor_free ( this)
  implicit none
  class(fe_vef_accessor_t), intent(inout) :: this
  call this%vef_accessor_t%free()
  nullify(this%fe_space)
end subroutine fe_vef_accessor_free

subroutine fe_vef_accessor_get_cell_around (this, ife_around, fe)
  implicit none
  class(fe_vef_accessor_t)          , intent(in)     :: this
  integer(ip)                       , intent(in)     :: ife_around
  type(fe_accessor_t)               ,  intent(inout) :: fe
  type(cell_accessor_t)                              :: cell
  call this%get_cell_around(ife_around,cell)
  call fe%create(cell%get_lid(), this%fe_space)
end subroutine fe_vef_accessor_get_cell_around

