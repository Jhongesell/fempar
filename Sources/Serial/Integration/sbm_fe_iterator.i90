subroutine fe_iterator_create ( this, lid, fe_space ) 
  implicit none
  class(fe_iterator_t)         , intent(inout) :: this
  integer(ip)                  , intent(in)    :: lid
  class(new_serial_fe_space_t) , intent(in)    :: fe_space
  call this%free()
  call this%fe_accessor%create(lid=lid, fe_space=fe_space)
end subroutine fe_iterator_create

subroutine fe_iterator_free ( this ) 
  implicit none
  class(fe_iterator_t), intent(inout) :: this
  call this%fe_accessor%free()
end subroutine fe_iterator_free

subroutine fe_iterator_init ( this ) 
  implicit none
  class(fe_iterator_t), intent(inout) :: this
  call this%fe_accessor%set_lid(lid=1)
end subroutine fe_iterator_init

subroutine fe_iterator_next ( this ) 
  implicit none
  class(fe_iterator_t), intent(inout) :: this
  call this%fe_accessor%next()
end subroutine fe_iterator_next

function fe_iterator_has_finished ( this ) 
  implicit none
  class(fe_iterator_t), intent(in) :: this
  logical                                 :: fe_iterator_has_finished
  fe_iterator_has_finished = this%fe_accessor%past_the_end()
end function fe_iterator_has_finished

subroutine fe_iterator_current ( this, fe_accessor ) 
  implicit none
  class(fe_iterator_t), target, intent(in)    :: this
  type(fe_accessor_t)         , intent(inout) :: fe_accessor
  fe_accessor = this%fe_accessor
end subroutine fe_iterator_current
