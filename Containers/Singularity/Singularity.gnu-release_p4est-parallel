BootStrap: docker
From: fempar/fempar-env:gnu-release_p4est-parallel

%setup
#######################
# ACTIONS FROM HOST
# use $SINGULARITY_ROOTFS to refer to container root (/)
#######################


%post
#######################
# INSTALL SECTION
#######################

    #------------------
    # REQUERIMENTS
    #------------------



    mkdir -p /mnt /scratch /opt/fempar

    #------------------
    # USER INSTALL
    #------------------

    # ... Install here your software


    #------------------
    # CLEAN APT files
    #------------------
    apt-get clean
    rm -rf /var/lib/apt/lists/*
    rm -rf /var/tmp/*

%runscript
#######################
# RUN COMMAND SCRIPT
# Singularity "run" command launch this script
#######################

    echo "Arguments received: $*"
    exec "$@"

%test
#######################
# TEST COMMAND SCRIPT
# Singularity "test" command launch this script
#######################
    cd /opt/fempar
    ctest -j8 -V -E par_test 

%help
#######################
# HELP MESSAGE
# Singularity "help" command launch this script
#######################

    echo "------------------------------------------------"
    echo "| Finite Element Multiphysics PARallel solvers |"
    echo "|             http://fempar.org/               |"
    echo "------------------------------------------------"

%appinstall fempar
#######################
# INSTALL SCRIPT FOR fempar APP
# Singularity "test" command launch this script
#######################

    . /opt/intel/mkl/bin/mklvars.sh intel64 
    PACKAGE=fempar 
    VERSION=experimental 
    URL="https://gitlab.com/$PACKAGE/$PACKAGE.git" 
    ROOT_DIR=/tmp 
    SOURCES_DIR=$ROOT_DIR/$PACKAGE-$VERSION 
    BUILD_DIR=/opt/$PACKAGE 
    THIRDPARTY_BUILD_DIR=/opt/$PACKAGE-thirdparty 
    FORTRAN_EXTRA_FLAGS="-DFORTRAN_EXTRA_FLAGS=-fimplicit-none" 
    git clone --single-branch --branch $VERSION --recursive $URL $SOURCES_DIR 
    mkdir -p $BUILD_DIR $THIRDPARTY_BUILD_DIR 
    ################################################ 
    # Build fempar thirdparty libraries 
    ################################################ 
    cd $THIRDPARTY_BUILD_DIR 
    cmake -DCMAKE_BUILD_TYPE=DEBUG $FORTRAN_EXTRA_FLAGS $SOURCES_DIR/ThirdParty 
    cmake --build . 
    ################################################ 
    # Build fempar library 
    ################################################ 
    cd $BUILD_DIR 
    cmake -DCMAKE_BUILD_TYPE=RELEASE -DFEMPAR_ENABLE_TESTS=ON -DFEMPAR_THIRDPARTY_DIR=$THIRDPARTY_BUILD_DIR -DMPIEXEC_PREFLAGS="--allow-run-as-root -oversubscribe" $SOURCES_DIR 
    cmake --build . 
    ################################################ 
    # Clean sources 
    ################################################ 
    rm -rf $SOURCES_DIR 

%appenv fempar
#######################
# fempar APP ENVIRONMENT VARIABLES
#######################
    FEMPAR_DIR=/opt/fempar
    export FEMPAR_DIR

%apphelp fempar
#######################
# fempar APP HELP MESSAGE
#######################

    echo "------------------------------------------------"
    echo "| Finite Element Multiphysics PARallel solvers |"
    echo "|             http://fempar.org/               |"
    echo "|          ------------------------            |"
    echo "| FEMPAR_DIR   = /opt/fempar                   |"
    echo "| ENABLED_LIBS = MKL, BLAS, LAPACK, QHULL,     |"
    echo "|                HDF5, P4EST (serial)          |"
    echo "------------------------------------------------"


